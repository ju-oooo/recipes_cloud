/* pages/classify/classify.wxss */

/*菜品类型总区域*/

page {
  margin: auto;
  width: 95%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

/*菜品内容 */

.dishes {
  float: left;
  margin: 20rpx 10rpx;
  box-sizing: border-box;
  width: 100%;
  height: 380rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0px 3px 5px 1px #f0f0f0;
}

/*菜品图片 */

.dishes-img {
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 10rpx;
  width: 100%;
  height: 400rpx;
}

/* 说明 */

.dishes-title {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  text-align: center;
  color: #f5f5f5;
  font-size: 36rpx;
}
