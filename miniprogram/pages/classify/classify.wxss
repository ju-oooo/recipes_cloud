/* pages/classify/classify.wxss */

/*菜品类型总区域*/

page {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-left: 10rpx;
}

/*菜品内容 */

.dishes {
  margin: 20rpx 20rpx 0 0;
  width: 330rpx;
  height: 250rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

/*菜品图片 */

.dishes-img {
  position: absolute;
  top: 0;
  left: 0;
  object-fit: cover;
  height: 300rpx;
  width: 100%;
}

/* 说明 */

.dishes-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  text-align: center;
  color: #f5f5f5;
  font-size: 36rpx;
}
