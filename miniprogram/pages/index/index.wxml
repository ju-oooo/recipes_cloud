<view class='recipes-search'>
  <input class="search-input" type="text" placeholder='搜索菜谱'></input>
  <icon class="search-icon" type="search" size="16"></icon>
</view>
<view class="recipes-recommend">
  <text class='recommend-embellish'></text>
  <text class='recommend-title'>一日三餐·晚餐</text>
  <text class='recommend-more'>查看更多 ></text>
</view>
<view class="recipes-details">
  <cuisine_recommend class='details-item'></cuisine_recommend>
  <cuisine_recommend class='details-item'></cuisine_recommend>
</view>
<view class="recipes-recommend">
  <text class='recommend-embellish'></text>
  <text class='recommend-title'>热门菜品</text>
  <text class='recommend-more'>查看更多 ></text>
</view>
<view class="recipes-choice">
  <block wx:for="{{cuisineList}}" wx:for-item="cuisine" wx:key="{{index}}">
    <cuisine_choice class='choice-item' cuisine="{{cuisine}}"></cuisine_choice>
  </block>
</view>