.cuisine {
  display: inline-block;
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
  margin: 10rpx auto;
  box-shadow: 0px 3px 5px 1px #ccc;

}

.cuisine-head {
  display: flex;
  flex-direction: column;
  padding: 0 10rpx;
  background-color: #fff;
}

.food {
  font-size: 0;
}

.cuisine-title {
  font-size: 34rpx;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.sub-title {
  padding: 10rpx 0;
  font-size: 28rpx;
  display: block;
  color: #999;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.image-info {
  width: 100%;
  height: 330rpx;
  background-color: #eee;
}

.image-info-o {
  width: 100%;
  height: 400rpx;
  background-color: #eee;
}
