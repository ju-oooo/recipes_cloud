/* pages/components/choiceList/index.wxss */

.recipes-choice {
  width: 95%;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.choice-item-o {
  padding: 0 10rpx 30rpx;
}

.choice-item {
  box-sizing: border-box;
  margin: auto;
  font-size: 0;
  width: 100%;
  border-radius: 12rpx;
  box-shadow: 0px 3px 5px 1px #eee;
  overflow: hidden;
}

.choice-item-img {
  width: 100%;
  height: 350rpx;
  object-fit: fill;
}

.choice-item-title {
  padding: 10rpx;
  font-size: 32rpx;
  color: #000;
  display: inline-block;
  width: 100%;
  background-color: #fff;
}
