/* pages/components/classifyList/index.wxss */

/*菜品内容 */

.classify-list {
  margin: auto;
  width: 95%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  box-sizing: border-box;
}

.classify {
  margin: 20rpx 0;
  box-sizing: border-box;
  width: 100%;
  height: 380rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0px 3px 5px 1px #eee;
}

/*菜品图片 */

.classify-img {
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 10rpx;
  width: 100%;
  height: 400rpx;
}

/* 说明 */

.classify-title {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  text-align: center;
  color: #f5f5f5;
  font-size: 36rpx;
}
