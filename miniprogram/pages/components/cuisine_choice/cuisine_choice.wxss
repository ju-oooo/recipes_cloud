.choice-item {
  margin: auto;
  font-size: 0;
  position: relative;
  width: 100%;
  border-radius: 12rpx;
  box-shadow: 0px 3px 5px 1px #ccc;
  overflow: hidden;
}

.choice-item-img {
  width: 100%;
  height: 350rpx;
  object-fit: fill;
}

.choice-item-title {
  padding: 10rpx 0 10rpx 20rpx;
  font-size: 32rpx;
  color: #000;
  display: inline-block;
  width: 100%;
  background-color: #fff;
}
