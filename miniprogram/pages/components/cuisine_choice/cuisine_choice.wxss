.choice {
  margin: auto;
  font-size: 0;
  position: relative;
  width: 90%;
  border-radius: 12rpx;
  overflow: hidden;
}

.choice-img {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.choice-title {
  position: absolute;
  padding-left: 20rpx;
  bottom: 0;
  left: 0;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #fff;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}
