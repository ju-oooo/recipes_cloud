page {
  width: 100%;
  height: 100%;
  font-size: 0;
}

.container {
  width: 100%;
  height: 100%;
}

.skip {
  position: absolute;
  bottom: 200rpx;
  right: 40rpx;
  color: #f5f5f5;
  font-size: 30rpx;
  border: 1rpx solid transparent;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.3);
}

.image-info {
  width: 100%;
  height: 100%;
}

.con-title {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.title {
  color: #fff;
  font-size: 60rpx;
  text-align: center;
  font-family: 方正行楷体, 方正舒体, 仿宋, 楷体;
}
