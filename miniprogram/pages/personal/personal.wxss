/* pages/personal/personal.wxss */

page {
  background-color: #f5f5f5;
  height: 100%;
}

.personal-info {
  background-color: #fff;
  display: flex;
  padding: 30rpx 35rpx;
  justify-content: flex-start;
}

.btn-login {
  font-size: 44rpx;
  color: #00ae66;
}
.info{
  display: flex;
  justify-content: flex-start;
}
.info image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
}

.info-right {
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.info-right text {
  padding: 15rpx;
}

.info-right .info-country {
  font-size: 30rpx;
}

.info-gender {
  font-size: 28rpx;
  color: #aaa;
}

.personal-other {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 28rpx;
}

.personal-item {
  background-color: #fff;
  padding: 0 35rpx;
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 10rpx;
}