/* pages/personal/personal.wxss */

page {
  background-color: #f5f5f5;
  height: 100%;
}

.personal-info {
  background-color: #fff;
  display: flex;
  padding: 30rpx 35rpx;
  justify-content: flex-start;
}

.btn-login {
  font-size: 44rpx;
  color: #67c401;
  background-color: #fff;
  border: 1rpx solid #fefefe;
}

.info {
  display: flex;
  justify-content: flex-start;
}

.info image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20%;
}

.info-right {
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
}

.info-right .info-name {
  font-weight: bold;
}

.info-right .info-country {
  font-size: 30rpx;
}

.info-gender {
  font-size: 28rpx;
  color: #aaa;
}

.personal-other {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 28rpx;
}

.personal-item {
  background-color: #fff;
  padding: 0 35rpx;
  display: block;
  height: 100rpx;
  line-height: 100rpx;
}

.mt-30 {
  margin-top: 30rpx;
}
.bb-1 {
  border-bottom: 1rpx solid #f5f5f5;
}
